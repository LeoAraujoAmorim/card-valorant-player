{
    "printWidth": 500,
    "tabWidth": 2,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "semi": true,
    "useTabs": false,
    "overrides": [
      {
        "files": ".json",
        "options": {
          "parser": "json",
          "tabWidth": 4
        }
      },
      {
        "files": ".svg",
        "options": {
          "parser": "html",
          "printWidth": 200
        }
      }
    ]
  }